  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    const projects = [
      { title: 'Personal Portfolio', desc: 'A responsive and elegant personal portfolio website built with modern HTML, CSS, and JavaScript.', link:'#' },
      { title: 'Interactive Product Page', desc: 'A dynamic e-commerce product page with a functional cart simulation and an attractive user interface.', link:'#' },
      { title: 'Simple Blogging Platform', desc: 'A basic blogging application that uses browser localStorage to manage posts, tags, and user data.', link:'#' },
      { title: 'Weather Dashboard', desc: 'A simple dashboard that fetches and displays real-time weather data for any city using a public API.', link:'#' }
    ];

    const grid = document.getElementById('projectsGrid');
    projects.forEach(p => {
      const card = document.createElement('div');
      card.className = 'project-card';
      card.innerHTML = `
        <h3>${p.title}</h3>
        <p>${p.desc}</p>
        <a href="${p.link}">View Project</a>
      `;
      grid.appendChild(card);
    });
  </script>

