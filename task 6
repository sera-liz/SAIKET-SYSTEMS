    h2 { color: #2563eb; margin-top: 0; }
    .calendar { width: 100%; border-collapse: collapse; text-align: center; }
    .calendar th { background: #2563eb; color: white; padding: 8px; }
    .calendar td { padding: 10px; border: 1px solid #ddd; cursor: pointer; transition: 0.2s; }
    .calendar td:hover { background: #93c5fd; color: white; font-weight: bold; }
    .today { background: #9333ea; color: white; border-radius: 50%; }
    input, button {
      padding: 10px; margin: 8px 0; border-radius: 8px; border: 1px solid #ddd;
      width: 100%; font-size: 1rem;
    }
    button {
      background: #2563eb; color: white; font-weight: bold;
      cursor: pointer; transition: 0.2s;
    }
    button:hover { background: #1d4ed8; }
    .error { color: red; font-size: 0.9rem; }
