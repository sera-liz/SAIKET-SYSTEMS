<body>
  <header>
    <h1>âœ¨ Interactive Web App</h1>
    <p>Calendar + Live Clock + Form + To-Do List with Deadlines</p>
  </header>

  <main>
    <!-- Sidebar Calendar -->
    <div class="sidebar">
      <h2>ðŸ“… Calendar</h2>
      <div id="calendarContainer"></div>
    </div>

    <!-- Main Content -->
    <div class="content">
      <h2>1. Live Clock</h2>
      <div class="time" id="clock"></div>

      <h2>2. Interactive Form</h2>
      <input type="text" id="nameInput" placeholder="Enter your name" />
      <p class="error" id="nameError"></p>
      <button id="greetBtn">Greet Me</button>
      <p id="greeting"></p>

      <h2>3. Dynamic To-Do List</h2>
      <input type="text" id="taskInput" placeholder="Enter a task" />
      <input type="date" id="deadlineInput" />
      <button id="addTaskBtn">Add Task</button>
      <ul id="taskList"></ul>
    </div>
  </main>

  <script>
    // Live Clock
    function updateClock() {
      const now = new Date();
      document.getElementById("clock").textContent = now.toLocaleTimeString();
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Form Interaction
    const nameInput = document.getElementById("nameInput");
    const nameError = document.getElementById("nameError");
    const greeting = document.getElementById("greeting");

    document.getElementById("greetBtn").addEventListener("click", () => {
      const name = nameInput.value.trim();
      if (name.length < 3) {
        nameError.textContent = "Name must be at least 3 characters.";
        greeting.textContent = "";
      } else {
        nameError.textContent = "";
        greeting.textContent = ðŸ‘‹ Hello, ${name}! Welcome to the interactive app.;
      }
    });

    // To-Do List with Deadline
    const taskInput = document.getElementById("taskInput");
    const deadlineInput = document.getElementById("deadlineInput");
    const taskList = document.getElementById("taskList");

    document.getElementById("addTaskBtn").addEventListener("click", () => {
      const task = taskInput.value.trim();
      const deadline = deadlineInput.value;
      if (!task) return;

      const li = document.createElement("li");
      li.innerHTML = `
        <span class="task-text">${task}</span>
        <span class="deadline">ðŸ“… ${deadline ? deadline : "No deadline"}</span>
        <button class="delete-btn">X</button>
      `;
      li.querySelector(".delete-btn").addEventListener("click", () => li.remove());
      taskList.appendChild(li);

      taskInput.value = "";
      deadlineInput.value = "";
    });

    // Calendar
    function generateCalendar() {
      const now = new Date();
      const year = now.getFullYear();
      const month = now.getMonth();
      const today = now.getDate();

      const firstDay = new Date(year, month, 1).getDay();
      const daysInMonth = new Date(year, month + 1, 0).getDate();

      let calendarHTML = "<table class='calendar'><tr>";
      const days = ["Sun","Mon","Tue","Wed","Thu","Fri","Sat"];
      days.forEach(day => calendarHTML += <th>${day}</th>);
      calendarHTML += "</tr><tr>";

      for (let i = 0; i < firstDay; i++) calendarHTML += "<td></td>";

      for (let day = 1; day <= daysInMonth; day++) {
        if ((firstDay + day - 1) % 7 === 0) calendarHTML += "</tr><tr>";
        const isToday = day === today ? "today" : "";
        calendarHTML += <td class="${isToday}">${day}</td>;
      }

      calendarHTML += "</tr></table>";
      document.getElementById("calendarContainer").innerHTML = calendarHTML;
    }
    generateCalendar();
  </script>
