<body>
  <header>
    <h1>üåü Extraordinary Blog</h1>
    <p>Write. Share. Inspire.</p>
    <img src="https://picsum.photos/200" alt="Blog Logo">
  </header>

  <div class="grid">
    <!-- Post List -->
    <div class="card">
      <h2 style="margin-bottom:10px;color:var(--accent)">üìö All Posts</h2>
      <input id="search" placeholder="üîç Search posts..." />
      <div id="posts"></div>
    </div>

    <!-- Editor -->
    <div class="card">
      <h2 style="margin-bottom:10px;color:var(--secondary)">‚úç Create / Edit</h2>
      <input id="title" placeholder="Post title" />
      <input id="tags" placeholder="Tags (comma separated)" />
      <textarea id="content" rows="8" placeholder="Write your story..."></textarea>
      <div class="actions">
        <button class="btn-primary" id="saveBtn">üíæ Save</button>
        <button class="btn-accent" id="publishBtn">üöÄ Publish</button>
        <button class="btn-danger" id="deleteBtn">üóë Delete</button>
      </div>
    </div>
  </div>

<script>
(function(){
  const LS_KEY='extraordinary_blog';
  let posts=JSON.parse(localStorage.getItem(LS_KEY)||'[]');
  let editingId=null;
  const el=id=>document.getElementById(id);

  function save(){localStorage.setItem(LS_KEY,JSON.stringify(posts));}
  function escape(s){return s.replace(/[&<>"']/g,m=>({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m]));}
  function renderList(q=''){
    const container=el('posts');container.innerHTML='';
    const filtered=posts.filter(p=>(p.title+p.content+p.tags).toLowerCase().includes(q.toLowerCase()))
      .sort((a,b)=>new Date(b.updated)-new Date(a.updated));
    if(!filtered.length){container.innerHTML='<p style="color:#888">No posts found</p>';return;}
    filtered.forEach(p=>{
      const card=document.createElement('div');
      card.className='post-card';
      card.innerHTML=`<h3>${escape(p.title||'Untitled')}</h3>
      <small>${new Date(p.updated).toLocaleString()} ‚Ä¢ ${p.published?'Published':'Draft'}</small>
      <p>${escape(p.content.slice(0,100))}${p.content.length>100?'‚Ä¶':''}</p>`;
      card.onclick=()=>loadPost(p.id);
      container.appendChild(card);
    });
  }
  function newPost(){editingId=null;el('title').value='';el('tags').value='';el('content').value='';el('deleteBtn').style.display='none';}
  function loadPost(id){
    const p=posts.find(x=>x.id===id);if(!p)return;
    editingId=p.id;el('title').value=p.title;el('tags').value=p.tags;el('content').value=p.content;
    el('deleteBtn').style.display='inline-block';
  }
  function savePost(pub=false){
    const title=el('title').value.trim(),tags=el('tags').value.trim(),content=el('content').value.trim();
    if(!title&&!content){alert('Please write something!');return;}
    if(editingId){
      const p=posts.find(x=>x.id===editingId);
      p.title=title;p.tags=tags;p.content=content;p.updated=new Date().toISOString();
      if(pub)p.published=true;
    } else {
      const id='p_'+Math.random().toString(36).slice(2,9);
      posts.push({id,title,tags,content,published:pub,created:new Date().toISOString(),updated:new Date().toISOString()});
      editingId=id;el('deleteBtn').style.display='inline-block';
    }
    save();renderList(el('search').value);
    alert('Post saved '+(pub?'& published!':''));
  }
  function deletePost(){
    if(!editingId)return;
    if(confirm('Delete this post?')){
      posts=posts.filter(p=>p.id!==editingId);save();newPost();renderList(el('search').value);
    }
  }
  el('saveBtn').onclick=()=>savePost(false);
  el('publishBtn').onclick=()=>savePost(true);
  el('deleteBtn').onclick=deletePost;
  el('search').oninput=e=>renderList(e.target.value);
  renderList();newPost();
})();
</script>
</body>
</html>
